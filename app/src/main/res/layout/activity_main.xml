<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="mnjpk.validator.email.app.emailvalidator.MainActivity">

    <AutoCompleteTextView
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/autoEmail_textView"
        android:hint="Please enter your Email..."
        android:textSize="20dp"
        android:textColor="@color/Aqua"
        android:textAlignment="center"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        android:id="@+id/validate_button"
        android:text="Login"
        android:background="@drawable/round_button"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="200dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/validateDomain_textView"
        android:textSize="22dp"
        android:fontFamily="serif"
        android:text="Welcome!"
        android:textColor="@color/Maroon"
        android:textAlignment="center"/>

    <TextView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="260dp"
        android:id="@+id/validation_textView"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textSize="22dp"
        android:fontFamily="sans-serif"
        android:text="None of us? Sign up below."
        android:textColor="@color/Aqua"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="320dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/Navy"
        android:text="SIGN UP"
        android:background="@drawable/round_button"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="32dp"
        android:layout_marginTop="390dp"
        android:layout_centerHorizontal="true"
        android:text="Forgot password?"
        android:textAlignment="center"
        android:textSize="18dp"
        android:textColor="@color/Aquamarine"/>

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="430dp"
        android:layout_marginLeft="100dp"
        android:background="@drawable/fb"/>

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="430dp"
        android:layout_marginLeft="210dp"
        android:background="@drawable/twitter"/>

</RelativeLayout>
